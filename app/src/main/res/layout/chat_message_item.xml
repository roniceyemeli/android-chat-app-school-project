<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="4dp">

    <!-- Sender's message bubble -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/messageTextViewSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:minWidth="50dp"
            android:background="@drawable/sender_bubble"
            android:padding="12dp"
            android:text="Sender's message"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Receiver's message bubble -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/messageTextViewReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:minWidth="50dp"
            android:background="@drawable/receiver_bubble"
            android:padding="12dp"
            android:text="Receiver's message"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>
